# Server Configuration
SERVER_PORT=8080
SPRING_PROFILE=prod

# Database Configuration (MySQL)
# For Render: Use internal database or external MySQL URL
DB_URL=jdbc:mysql://your-db-host:3306/lms_db?useSSL=true&serverTimezone=UTC&allowPublicKeyRetrieval=false
DB_USER=lms_user
DB_PASS=secure_password_here

# JWT Configuration (REQUIRED for production)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_must_be_32_chars_minimum
JWT_EXPIRY=900000

# JWT Refresh Secret (REQUIRED for production)
REFRESH_SECRET=your_refresh_secret_here_must_be_32_chars_minimum
REFRESH_EXPIRY=604800000

# AES Encryption Key (32 chars for AES-256)
AES_KEY=0123456789ABCDEF0123456789ABCDEF

# Application Settings
SPRING_APPLICATION_NAME=Lab Management System
JAVA_OPTS=-Xmx512m -Xms256m
