<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.lms</groupId>
  <artifactId>lab-management-system-ui</artifactId>
  <name>Lab Management System - JavaFX UI</name>
  <version>1.0.0</version>
  <description>JavaFX Desktop Application for Lab Management System</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>21</source>
          <target>21</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.lms.ui.LabManagementApplication</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.lms.ui.LabManagementApplication</mainClass>
                </transformer>
              </transformers>
              <finalName>LabManagementSystem</finalName>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>executable</shadedClassifierName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.lms.ui.LabManagementApplication</mainClass>
            </manifest>
          </archive>
          <finalName>LabManagementSystem</finalName>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>jpackage</id>
            <phase>package</phase>
            <configuration>
              <target>
                <property />
                <condition>
                  <os />
                </condition>
                <property />
                <echo />
              </target>
              <skip>true</skip>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>windows</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>3.1.0</version>
            <executions>
              <execution>
                <id>jpackage-windows</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>jpackage</executable>
                  <arguments>
                    <argument>--input</argument>
                    <argument>${project.build.directory}</argument>
                    <argument>--name</argument>
                    <argument>Lab Management System</argument>
                    <argument>--main-jar</argument>
                    <argument>LabManagementSystem-executable.jar</argument>
                    <argument>--main-class</argument>
                    <argument>com.lms.ui.LabManagementApplication</argument>
                    <argument>--type</argument>
                    <argument>exe</argument>
                    <argument>--dest</argument>
                    <argument>${project.build.directory}/installers</argument>
                    <argument>--vendor</argument>
                    <argument>Lab Management System</argument>
                    <argument>--app-version</argument>
                    <argument>${project.version}</argument>
                    <argument>--java-options</argument>
                    <argument>-Xmx2g</argument>
                  </arguments>
                  <skip>false</skip>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>mac</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>3.1.0</version>
            <executions>
              <execution>
                <id>jpackage-mac</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>jpackage</executable>
                  <arguments>
                    <argument>--input</argument>
                    <argument>${project.build.directory}</argument>
                    <argument>--name</argument>
                    <argument>Lab Management System</argument>
                    <argument>--main-jar</argument>
                    <argument>LabManagementSystem-executable.jar</argument>
                    <argument>--main-class</argument>
                    <argument>com.lms.ui.LabManagementApplication</argument>
                    <argument>--type</argument>
                    <argument>dmg</argument>
                    <argument>--dest</argument>
                    <argument>${project.build.directory}/installers</argument>
                    <argument>--vendor</argument>
                    <argument>Lab Management System</argument>
                    <argument>--app-version</argument>
                    <argument>${project.version}</argument>
                    <argument>--java-options</argument>
                    <argument>-Xmx2g</argument>
                  </arguments>
                  <skip>false</skip>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>linux</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>3.1.0</version>
            <executions>
              <execution>
                <id>jpackage-linux</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>jpackage</executable>
                  <arguments>
                    <argument>--input</argument>
                    <argument>${project.build.directory}</argument>
                    <argument>--name</argument>
                    <argument>Lab Management System</argument>
                    <argument>--main-jar</argument>
                    <argument>LabManagementSystem-executable.jar</argument>
                    <argument>--main-class</argument>
                    <argument>com.lms.ui.LabManagementApplication</argument>
                    <argument>--type</argument>
                    <argument>deb</argument>
                    <argument>--dest</argument>
                    <argument>${project.build.directory}/installers</argument>
                    <argument>--vendor</argument>
                    <argument>Lab Management System</argument>
                    <argument>--app-version</argument>
                    <argument>${project.version}</argument>
                    <argument>--java-options</argument>
                    <argument>-Xmx2g</argument>
                  </arguments>
                  <skip>false</skip>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>build-windows-exe</id>
      <build />
    </profile>
    <profile>
      <id>build-mac-dmg</id>
      <build />
    </profile>
  </profiles>
  <properties>
    <maven.compiler.target>21</maven.compiler.target>
    <java.version>21</java.version>
    <maven.compiler.source>21</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>21.0.2</javafx.version>
  </properties>
</project>
