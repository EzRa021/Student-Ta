<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.lms.ui.controller.RegisterController" stylesheets="@../css/professional-styles.css"
           style="-fx-background-color: #f5f5f5;">

    <!-- Background -->
    <VBox style="-fx-background-color: linear-gradient(to bottom, #1976d2, #1565c0);" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>

    <!-- Scrollable page container -->
    <ScrollPane style="-fx-fit-to-width: true; -fx-border: none; -fx-background: transparent;">
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">
            
            <!-- Register card -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 40; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                  prefWidth="450">
                
                <!-- Header -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Lab Management System" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #1976d2;" alignment="CENTER"/>
                    <Label text="Create Account" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333333;" alignment="CENTER"/>
                </VBox>
                
                <!-- Role selection tabs -->
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="studentTabButton" text="Student Registration" 
                            style="-fx-font-size: 12; -fx-padding: 10 20; -fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 3;"
                            prefWidth="180"/>
                    <Button fx:id="taTabButton" text="TA Registration" 
                            style="-fx-font-size: 12; -fx-padding: 10 20; -fx-background-color: #cccccc; -fx-text-fill: #333333; -fx-font-weight: bold; -fx-border-radius: 3;"
                            prefWidth="180"/>
                </HBox>
                
                <!-- Separator -->
                <Separator style="-fx-padding: 0;"/>
                
                <!-- Registration form fields -->
                <VBox spacing="15" fx:id="registrationFormContainer">
                    
                    <!-- Student ID / TA ID field -->
                    <VBox spacing="5">
                        <Label fx:id="idLabel" text="Student ID *" style="-fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 12;"/>
                        <TextField fx:id="idField" promptText="e.g., STU001" prefHeight="40"
                                   style="-fx-font-size: 13; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 3;"/>
                        <Label fx:id="idHintLabel" text="Your unique student identifier" style="-fx-font-size: 10; -fx-text-fill: #999999;"/>
                    </VBox>
                    
                    <!-- Username field -->
                    <VBox spacing="5">
                        <Label text="Username *" style="-fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 12;"/>
                        <TextField fx:id="usernameField" promptText="Choose a username" prefHeight="40"
                                   style="-fx-font-size: 13; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 3;"/>
                        <Label text="3-20 characters, letters, numbers, and underscores only" style="-fx-font-size: 10; -fx-text-fill: #999999;"/>
                    </VBox>
                    
                    <!-- Email field -->
                    <VBox spacing="5">
                        <Label text="Email *" style="-fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 12;"/>
                        <TextField fx:id="emailField" promptText="Enter your email" prefHeight="40"
                                   style="-fx-font-size: 13; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 3;"/>
                    </VBox>
                    
                    <!-- Password field -->
                    <VBox spacing="5">
                        <Label text="Password *" style="-fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 12;"/>
                        <PasswordField fx:id="passwordField" promptText="Minimum 6 characters" prefHeight="40"
                                       style="-fx-font-size: 13; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 3;"/>
                    </VBox>
                    
                    <!-- Confirm Password field -->
                    <VBox spacing="5">
                        <Label text="Confirm Password *" style="-fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 12;"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" prefHeight="40"
                                       style="-fx-font-size: 13; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 3;"/>
                    </VBox>
                    
                    <!-- Error message -->
                    <Label fx:id="errorLabel" text="" style="-fx-text-fill: #d32f2f; -fx-font-size: 12;" wrapText="true" alignment="CENTER"/>
                    
                    <!-- Register button -->
                    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                        <Button fx:id="registerButton" text="Register" style="-fx-font-size: 14; -fx-padding: 12 40; -fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 3;" 
                                prefWidth="150"/>
                        <ProgressIndicator fx:id="loadingIndicator" prefWidth="30" prefHeight="30" visible="false"/>
                    </HBox>
                    
                </VBox>
                
                <!-- Separator -->
                <Separator style="-fx-padding: 0;"/>
                
                <!-- Back to login -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Already have an account?" style="-fx-font-size: 12; -fx-text-fill: #666666;"/>
                    <Button fx:id="backToLoginButton" text="Sign In" style="-fx-font-size: 12; -fx-text-fill: #1976d2; -fx-font-weight: bold; -fx-border: none; -fx-background-color: transparent; -fx-cursor: hand;"/>
                </VBox>
            </VBox>
            
        </VBox>
    </ScrollPane>

</StackPane>
